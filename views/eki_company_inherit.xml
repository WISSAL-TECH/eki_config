<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="company_template_inherit_form" model="ir.ui.view">
        <field name="name">res.company.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
                <xpath expr="notebook/page[@name='general_info']/group/field[@name='currency_id']" position="after">
                    <field name="domain"/>
                    <field name="codification"/>
                </xpath>

        </field>
    </record>

</odoo>
